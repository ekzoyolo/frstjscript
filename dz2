

let msgs =[
"Пойдем гулять в парк?", //0
"Кажется, дождь собирается. Лучше пойдем в кино!", //1
"Давай, сегодня как раз вышел новый фильм.", //2
"Встречаемся через час у кинотеатра." //3
];
for(let i = 0; i < msgs.length; i++){
  if(i % 2){
    console.log('Вы', msgs[i])
  }
   else{
    console.log('Друг', msgs[i])
  }
}
